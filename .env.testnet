# Sofia V2 Testnet Environment
MODE=testnet
EXCHANGE=binance
ENVIRONMENT=testnet

# Testnet API Keys (safe to commit - testnet only)
API_KEY=testnet_api_key_example
API_SECRET=testnet_api_secret_example

# Conservative limits for testnet
BASE_CURRENCY=USD
MAX_DAILY_LOSS=100
MAX_POSITION_USD=500
MAX_SYMBOL_EXPOSURE_USD=200
SINGLE_ORDER_MAX_USD=50
SLIPPAGE_BPS=100
HEARTBEAT_SEC=10
KILL_SWITCH=OFF

# Relaxed thresholds for testing
HALT_ON_LAT_MICROSECONDS=10000000
HALT_ON_WS_DOWNTIME_SEC=60

# Testing features
ML_PREDICTOR_ENABLED=true
TRADING_MODE=shadow
CANARY_ENABLED=true

# Observability
SENTRY_DSN=
PROMETHEUS_ENABLED=true
LOG_LEVEL=DEBUG

# Server Configuration
API_PORT=8023
UI_PORT=8004
STATIC_PORT=4173

# Database
DATABASE_URL=sqlite:///./trading_testnet.db

# CORS
CORS_ORIGINS=http://127.0.0.1:8004,http://localhost:8004