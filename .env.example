# Sofia V2 Environment Configuration
# Copy this file to .env and fill in your values

# Mode Configuration
MODE=testnet                    # testnet|live
EXCHANGE=binance                # binance|kraken|coinbase
ENVIRONMENT=development         # development|staging|production

# API Keys (NEVER commit real keys)
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Trading Configuration
BASE_CURRENCY=USD               # USD|EUR|TRY
MAX_DAILY_LOSS=200             # Maximum daily loss in USD
MAX_POSITION_USD=1000          # Maximum position size in USD
MAX_SYMBOL_EXPOSURE_USD=500    # Maximum exposure per symbol
SINGLE_ORDER_MAX_USD=100       # Maximum single order size
SLIPPAGE_BPS=50               # Slippage tolerance in basis points
HEARTBEAT_SEC=15              # WebSocket heartbeat interval
KILL_SWITCH=OFF               # ON|OFF|AUTO

# Risk Management
HALT_ON_LAT_MICROSECONDS=5000000  # 5 seconds
HALT_ON_WS_DOWNTIME_SEC=30        # WebSocket downtime threshold

# Feature Flags
ML_PREDICTOR_ENABLED=false
TRADING_MODE=shadow            # shadow|canary|live
CANARY_ENABLED=false

# Observability
SENTRY_DSN=
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO

# Server Configuration
API_PORT=8023
UI_PORT=8004
STATIC_PORT=4173

# Database
DATABASE_URL=sqlite:///./trading.db

# CORS
CORS_ORIGINS=http://127.0.0.1:8004,http://localhost:8004