# Sofia V2 - AI Trading Platform Configuration

# Database
DATABASE_URL=sqlite:///./sofia.db
REDIS_URL=redis://localhost:6379

# === BINANCE CONFIGURATION ===
# Get testnet keys from: https://testnet.binance.vision/
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_API_SECRET=your_testnet_hmac_sha256_secret_here
BINANCE_TESTNET=true  # Set to false for real trading

# === TRADING CONFIGURATION ===
TRADING_MODE=paper  # paper | live | backtest
INITIAL_BALANCE=10000  # Starting balance for paper trading
MAX_POSITIONS=5  # Maximum concurrent positions
POSITION_SIZE=0.1  # 10% of balance per position
DAILY_LOSS_LIMIT=0.05  # Stop trading if down 5% in a day

# === RISK MANAGEMENT ===
STOP_LOSS=0.02  # 2% stop loss per trade
TAKE_PROFIT=0.05  # 5% take profit
TRAILING_STOP=true
TRAILING_DISTANCE=0.01  # 1% trailing stop

# === STRATEGY SELECTION ===
# Enable/disable strategies
ENABLE_ARBITRAGE=true
ENABLE_GRID_TRADING=true
ENABLE_RSI_MACD=true
ENABLE_SCALPING=false

# === ARBITRAGE SETTINGS ===
ARB_MIN_SPREAD=0.005  # Minimum 0.5% spread to trade
ARB_MAX_POSITION=1000  # Max $1000 per arbitrage
ARB_EXCHANGES=binance,coinbase,kraken

# === GRID TRADING SETTINGS ===
GRID_LEVELS=10  # Number of grid levels
GRID_SPACING=0.005  # 0.5% between levels
GRID_AMOUNT=100  # $100 per grid level

# Data Providers (legacy)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
POLYGON_API_KEY=your_polygon_key_here
COINMARKETCAP_API_KEY=your_coinmarketcap_key_here

# News Providers
CRYPTOPANIC_API_KEY=your_cryptopanic_key_here
GDELT_PROJECT_ID=your_gdelt_project_here

# AI Services
ANTHROPIC_API_KEY=your_anthropic_key_here

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=true
ENVIRONMENT=development

# API Settings
API_HOST=localhost
API_PORT=8000
RATE_LIMIT_PER_MINUTE=60

# Authentication & JWT
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe Payment Integration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_BASIC_MONTHLY_PRICE_ID=price_basic_monthly_id
STRIPE_BASIC_YEARLY_PRICE_ID=price_basic_yearly_id
STRIPE_PRO_MONTHLY_PRICE_ID=price_pro_monthly_id
STRIPE_PRO_YEARLY_PRICE_ID=price_pro_yearly_id
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_enterprise_monthly_id
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_enterprise_yearly_id

# Data Configuration
DATA_DIR=./data
OUTPUTS_DIR=./outputs
CACHE_TTL=600

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# Security
SECRET_KEY=your-secret-key-here

# CORS settings
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*
