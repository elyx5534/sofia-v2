# Sofia V2 Environment Configuration

# API Server Configuration
API_HOST=127.0.0.1
API_PORT=8023
API_URL=http://127.0.0.1:8023

# Database Configuration
DATABASE_URL=sqlite:///./sofia.db

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# External API Keys (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# Paper Trading Configuration
PAPER_TRADING_ENABLED=true
PAPER_INITIAL_BALANCE=100000
PAPER_MAX_POSITION_SIZE=10000
PAPER_MAX_LEVERAGE=1

# Market Data Configuration
MARKET_DATA_PROVIDER=yfinance
MARKET_DATA_UPDATE_INTERVAL=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=sofia.log

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://localhost:4173", "http://127.0.0.1:5173", "http://127.0.0.1:4173"]

# Security
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24