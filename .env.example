# Sofia V2 - Global Crypto Scanner Configuration

# CryptoPanic API Token (optional for news)
CRYPTOPANIC_TOKEN=your_token_here

# Exchange API Keys (optional, currently using public endpoints)
# BINANCE_API_KEY=your_key_here
# BINANCE_SECRET=your_secret_here
# BYBIT_API_KEY=your_key_here
# BYBIT_SECRET=your_secret_here

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=true

# Data Configuration
DATA_DIR=./data
OUTPUTS_DIR=./outputs

# Cache settings
CACHE_TTL=600  # Cache TTL in seconds (10 minutes)
DATABASE_URL=sqlite+aiosqlite:///./data_hub.db

# Provider settings
DEFAULT_EXCHANGE=binance
PROVIDER_TIMEOUT=30  # Timeout in seconds

# API settings
API_TITLE="Sofia V2 - Global Crypto Scanner"
API_VERSION="1.0.0"
API_DESCRIPTION="FastAPI service for OHLCV data with signal scanning"

# Logging
LOG_LEVEL=INFO

# CORS settings (comma-separated for lists)
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*
