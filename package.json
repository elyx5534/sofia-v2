  "description": "Sofia V2 - AI Trading Platform",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "tailwindcss -i ./sofia_ui/static/styles/app.css -o ./sofia_ui/static/styles/app.css --watch",
    "build:css:prod": "tailwindcss -i ./sofia_ui/static/styles/app.css -o ./sofia_ui/static/styles/app.css --minify",
    "test:e2e": "playwright test",
    "test:e2e:dash": "playwright test tests/e2e/dashboard.spec.ts --project=chromium",
    "test:a11y": "playwright test --config=playwright-a11y.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elyx5534/sofia-v2.git"
  },
