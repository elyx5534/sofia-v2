  "bugs": {
    "url": "https://github.com/elyx5534/sofia-v2/issues"
  },
  "homepage": "https://github.com/elyx5534/sofia-v2#readme",
  "dependencies": {
    "lightweight-charts": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.40.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  }
