# Live Trading Grid Environment
MODE=paper
TRADING_MODE=shadow
ENVIRONMENT=live_grid
EXCHANGE=binance
BASE_CURRENCY=USD

# Asset Universe Configuration
MAX_CONCURRENCY=48
SCAN_RATE_SEC=5
T1_ASSETS=50
T2_ASSETS=150
T2_ROTATION_INTERVAL_MIN=30

# Rate Limiting (per exchange)
BINANCE_RPM_LIMIT=1200
BINANCE_RPS_LIMIT=10
COINBASE_RPM_LIMIT=600
COINBASE_RPS_LIMIT=5
GLOBAL_RPS_LIMIT=20

# Order Budget Management
MAX_ORDERS_PER_MINUTE=60
MAX_ORDERS_PER_SYMBOL_PER_MINUTE=5
ORDER_BUDGET_RESET_SEC=60

# News Trading Configuration
AI_NEWS_ENABLED=true
USE_FINBERT=true
SENTIMENT_THRESHOLD_POS=0.5
SENTIMENT_THRESHOLD_NEG=-0.5
NEWS_K_ADJUSTMENT=0.1
EVENT_SPIKE_TWAP_THRESHOLD=10
REGULATORY_ORDER_CAP=1000

# Execution Configuration
EXECUTION_STYLE=post_only_first
MAKER_FIRST_ENABLED=true
TWAP_LARGE_ORDER_USD=5000
DYNAMIC_OFFSET_ENABLED=true
ANTI_SPIKE_ENABLED=true
QUEUE_DEPTH_MIN_USD=50000

# Portfolio Integration
PORTFOLIO_METHOD=hrp
BASE_K_FACTOR=0.25
K_FACTOR_MIN=0.05
K_FACTOR_MAX=1.0
HYSTERESIS_THRESHOLD=0.02

# Risk Controls
MAX_DAILY_LOSS_PCT=0.5
MAX_SYMBOL_EXPOSURE_PCT=10
SINGLE_ORDER_MAX_PCT=2
VENUE_HEALTH_CHECK_SEC=60
VENUE_ERROR_THRESHOLD=5

# UI Configuration
GRID_REFRESH_SEC=10
GRID_VIRTUALIZATION_ENABLED=true
WS_FALLBACK_TO_POLL=true
BLOTTER_MAX_ROWS=1000

# System
API_PORT=8023
UI_PORT=8004
STATIC_PORT=4173
HEARTBEAT_SEC=10
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///./trading_live.db

# Observability
PROMETHEUS_ENABLED=true
METRICS_EXPORT_SEC=30