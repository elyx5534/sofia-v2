# Canary Live Trading Configuration
MODE=canary
ENVIRONMENT=canary
TRADING_MODE=canary
EXCHANGE=binance
BASE_CURRENCY=USD

# Capital Ramping Schedule (% of total equity)
CANARY_DAY_1_2_PCT=5
CANARY_DAY_3_4_PCT=15
CANARY_DAY_5_7_PCT=30
CANARY_FULL_PCT=50

# Risk Budgets (default, adjustable)
MAX_DAILY_LOSS_PCT=0.5
MAX_SYMBOL_EXPOSURE_PCT=10
SINGLE_ORDER_MAX_PCT=2
SLIPPAGE_BPS_P95_LIMIT=50
ERROR_RATIO_LIMIT=1.0

# Portfolio Construction
PORTFOLIO_METHOD=hrp
VOLATILITY_TARGET=10.0
KELLY_CAP=0.5
MAX_SYMBOL_WEIGHT=30
MAX_STRATEGY_WEIGHT=20

# Execution
EXECUTION_STYLE=post_only_first
TWAP_SLOTS=10
DYNAMIC_OFFSET_BPS=2
QUEUE_DEPTH_MIN=50000

# AI Sentiment Integration
SENTIMENT_THRESHOLD_POSITIVE=0.5
SENTIMENT_THRESHOLD_NEGATIVE=-0.5
SENTIMENT_K_ADJUSTMENT=0.1

# Gates and Monitoring  
CANARY_EVALUATION_HOURS=24
RAMP_UP_THRESHOLD_PNL=0
RAMP_UP_THRESHOLD_MAXDD=-3.0
RAMP_DOWN_THRESHOLD_ERROR=2.0
KILL_SWITCH_MAXDD=-10.0

# System Configuration
API_PORT=8023
UI_PORT=8004
STATIC_PORT=4173
HEARTBEAT_SEC=10
PROMETHEUS_ENABLED=true

# Database
DATABASE_URL=sqlite:///./trading_canary.db

# CORS
CORS_ORIGINS=http://127.0.0.1:8004,http://localhost:8004,http://127.0.0.1:4173,http://localhost:4173

# Observability
LOG_LEVEL=INFO
SENTRY_DSN=